@page
@model vosplzen.sem1._2023k.Pages.QuestionnaireModel
@{
}


<h1>Vyplnění dotazníku</h1>
<hr />

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="btn-success p-3" >
        <h5>@Model.Message</h5>
    </div>
    <hr />
}


<div class="row">
    <div class="col-md-4 col-sm-8">
        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Questionnaire.Name" class="control-label"></label>
                <input asp-for="Questionnaire.Name" class="form-control" />
                <span asp-validation-for="Questionnaire.Name"  class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Questionnaire.LastName" class="control-label"></label>
                <input asp-for="Questionnaire.LastName" class="form-control" />
                <span asp-validation-for="Questionnaire.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Questionnaire.Rating" class="control-label"></label>
                <input asp-for="Questionnaire.Rating"
                       class="form-control" max="5" min="1" value="3" />
            </div>

            <button class="mt-4 btn btn-primary" type="submit">Odeslat</button>

        </form>
    </div>
</div>


